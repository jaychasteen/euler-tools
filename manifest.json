{
    "name": "Euler Tools",
    "short_name": "eulertools",
    "author": "Jonathan Chasteen",
    "version": "0.1",
    "description": "Provides a extra features for the Project Euler website and a browser button",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "lib/manager.js",
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "https://*.projecteuler.net/*",
        "storage"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_title": "Euler Tools"
    },
    "content_scripts": [
        {
            "matches": ["https://*.projecteuler.net/*"],
            "js": [
                "lib/manager.js",
                "content.js"
            ]
        }
    ]
}